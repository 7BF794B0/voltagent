{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "extends": "nx/presets/npm.json",
  "affected": {
    "defaultBase": "main"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "types", "lint", "test"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**/*.d.ts", "{projectRoot}/build"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**/*.d.ts"]
    }
  },
  "workspaceLayout": {
    "libsDir": "packages",
    "appsDir": "examples"
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "sharedGlobals": [],
    "production": ["default"]
  },
  "cli": {
    "packageManager": "pnpm"
  }
}
